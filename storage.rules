rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Default: deny all access
    match /{allPaths=**} {
      allow read, write: if false;
    }

    // Player photos directory - public read, authenticated write
    match /player-photos/{playerId} {
      allow read: if true; // Public read for game display
      allow write: if request.auth != null; // Authenticated admin write
    }

    // Player avatars directory - public read, authenticated write
    match /player-avatars/{playerId} {
      allow read: if true; // Public read for game display
      allow write: if request.auth != null; // Authenticated admin write or Cloud Function
    }

    // Legacy uploads directory - maintain existing access
    match /uploads/{fileName} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
